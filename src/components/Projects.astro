---
import Carousel from "./Carousel.astro";
const PROJECTS = [
    {
        title: "Telde\'s City Council Website",
        description: "A Web portal for the city council of Telde, Gran Canaria. It includes a modern design, responsive layout, and various sections such as news, services, and contact information. The website is built with Drupal and several modules. This website serves as a central hub for citizens to access information and services provided by the city council. It is designed to be user-friendly and accessible, ensuring that residents can easily find the information they need. The website is also optimized for mobile devices, allowing users to access it from their smartphones and tablets.",
        images: ["/projects/councilWeb.webp", "/projects/clinic.webp"],
        tags: ["Drupal", "Custom Theme", "Web Development", "Content Management System", "Linux", "Apache", "MySQL", "Security"],
    },
    {
        title: "Dentist page",
        description: "A dentist webpage with a modern design, responsive layout and with built-in appointment scheduling, contact form, services section, testimonials, and an Online store, with the colour palette selected by the client. All done with Wordpress.",
        image: "/projects/clinic.webp",
        tags: ["E-Commerce", "Wordpress", "Elementor", "Contact Form", "Appointment Scheduling", "Responsive Design"]
    },
    {
        title: "Coffee Shop application",
        description: "A coffee shop application for the employees with user authentication and CRUD operations. In the operations, you can add, edit, delete and view products, orders and employees, as well as other related items such as tables, reservations, etc. All done with PhP and MySQL.",
        github: "https://github.com/maherHazem/cafeteria",
        tags: ["Restaurant", "Authentication", "CRUD", "MySQL", "PhP", "javascript", "HTML", "CSS"]
    }
]
---
{
    PROJECTS.map(({title, description, image, tags, github, images})=> (
        <article class="py-6 px-4 mb-8 bg-white dark:bg-gray-800 rounded-lg shadow-md">
            <h3 class="text-xl md:text-2xl text-yellow-200">{title}</h3>
            <p>{description}</p>
            {image && (
                <img src={image} alt={`Screenshot of the project ${image}`} class="rounded my-4 border-1 border-green-200"/>
            )}
            {images && (
                    <Carousel images={images} title={title}/>
            )}
            <ul class="mt-2">
                {tags.map(tag => (
                    <li class="inline-block bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-full px-3 py-1 text-sm font-semibold mr-2 mb-2">{tag}</li>
                ))}
            </ul>
            {github && (
                <a href={github} class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-blue-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700" target="_blank">
                Check it on GitHub
                <svg class="w-3 h-3 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                </svg>
            </a>
            )}
        </article>
    ))
}