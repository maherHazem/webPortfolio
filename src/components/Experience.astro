---
import ExperienceItem from "./ExperienceItem.astro";
import {experience} from "../i18n/ui";
const currentLang = Astro.currentLocale || 'en';
const EXPERIENCE = experience[currentLang as keyof typeof experience] || experience['en'];
---
<ol class="relative border-s border-gray-200 dark:border-gray-700 ml-2.5">
    {
        EXPERIENCE.map(experience=> (
            <li class="mb-10 ms-4">
                <ExperienceItem {...experience} />
            </li>
        ))
    }
</ol>

